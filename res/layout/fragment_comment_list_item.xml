<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:orientation="vertical" >

        <com.example.helloworld.fragments.widgets.AvatarView
            android:id="@+id/comment_item_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/comment_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="user" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >

                <TextView
                    android:id="@+id/comment_item_createdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="1994-02-11"
                    android:textColor="#808080" />
            </FrameLayout>
        <TextView
            android:id="@+id/comment_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容" />
    </LinearLayout>

</LinearLayout>